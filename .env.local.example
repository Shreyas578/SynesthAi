# Ollama Configuration - Gemma 2B
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma:2b

# Qloo Hackathon API (REQUIRED)
# Get your API key from the Qloo Hackathon dashboard
QLOO_API_KEY=your api key

# Media Enrichment APIs (OPTIONAL - app works without these)
# TMDB API for movie posters and trailers
TMDB_API_KEY=your_tmdb_api_key_here

# Spotify API for music previews and artist images
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Google Books API (uses public endpoint by default)
GOOGLE_BOOKS_API_KEY=your_google_books_api_key

# Google Places API (not implemented yet)
GOOGLE_PLACES_API_KEY=your_google_places_api_key
